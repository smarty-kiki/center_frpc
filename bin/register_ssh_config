#!/bin/bash

ROOT_DIR="$(cd "$(dirname $0)" && pwd)"/..

REGISTER_KEY=$1

if [ -z "$REGISTER_KEY" ]
then
    echo "用法 $0 注册key"
    exit
fi

PUBLIC_IP=`curl http://ssh.yao-yang.cn/public_ip`
WLAN_IP=`ifconfig wlan0 |grep -E '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | awk '{print $2}'`
HOSTNAME=`hostname`

curl --location --request POST 'http://ssh.yao-yang.cn/machines' \
--form "name=$HOSTNAME" \
--form "register_key=$REGISTER_KEY" \
--form "public_ip=$PUBLIC_IP" \
--form "wlan_ip=$WLAN_IP"
